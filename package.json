{
  "name": "kanban-board",
  "version": "1.0.0",
  "description": "Collaborative Kanban board system",
  "private": true,
  "workspaces": [
    "frontend",
    "backend",
    "shared"
  ],
  "scripts": {
    "//": "=== CORE WORKFLOWS ===",
    "dev": "bun run dev:bun",
    "build": "bun run build:bun",
    "test": "bun run test:bun",
    "lint": "bun run lint:bun",
    "typecheck": "bun run typecheck:bun",

    "//2": "=== BUN WORKFLOWS (Primary - Performance Optimized) ===",
    "dev:bun": "concurrently \"bun run dev:backend:bun\" \"bun run dev:frontend:bun\"",
    "build:bun": "bun run build:shared && bun run build:backend && bun run build:frontend",
    "test:bun": "bun run test:backend:bun && bun run test:frontend:vitest",
    "lint:bun": "bun run lint:frontend && bun run lint:backend",
    "typecheck:bun": "bun run typecheck:frontend && bun run typecheck:backend",

    "//3": "=== NPM WORKFLOWS (Production/CI Compatible) ===",
    "dev:npm": "concurrently \"npm run dev:backend:npm\" \"npm run dev:frontend:npm\"",
    "build:npm": "npm run build:shared:npm && npm run build:backend:npm && npm run build:frontend:npm",
    "test:npm": "npm run test:backend:npm && npm run test:frontend:npm",
    "lint:npm": "npm run lint:frontend:npm && npm run lint:backend:npm",
    "typecheck:npm": "npm run typecheck:frontend:npm && npm run typecheck:backend:npm",

    "//4": "=== WORKSPACE SCRIPTS ===",
    "dev:frontend:bun": "cd frontend && bun run dev",
    "dev:backend:bun": "DATABASE_URL=\"file:../prisma/dev.db\" cd backend && bun run dev",
    "build:frontend": "cd frontend && bun run build",
    "build:backend": "cd backend && bun run build",
    "build:shared": "cd shared && bun run build",
    "dev:frontend:npm": "cd frontend && npm run dev",
    "dev:backend:npm": "DATABASE_URL=\"file:../prisma/dev.db\" cd backend && npm run dev:npm",
    "build:frontend:npm": "cd frontend && npm run build",
    "build:backend:npm": "cd backend && npm run build:npm",
    "build:shared:npm": "cd shared && npm run build:npm",
    "lint:frontend": "cd frontend && bun run lint",
    "lint:backend": "cd backend && bun run lint",
    "lint:frontend:npm": "cd frontend && npm run lint",
    "lint:backend:npm": "cd backend && npm run lint:npm",
    "typecheck:frontend": "cd frontend && bunx tsc -b --noEmit",
    "typecheck:backend": "cd backend && bunx tsc --noEmit",
    "typecheck:frontend:npm": "cd frontend && npx tsc -b --noEmit",
    "typecheck:backend:npm": "cd backend && npx tsc --noEmit",
    "test:backend:bun": "cd backend && bun test src",
    "test:frontend:vitest": "cd frontend && bunx vitest run",
    "test:backend:npm": "cd backend && npm run test:npm",
    "test:frontend:npm": "cd frontend && npx vitest run",

    "//5": "=== PRODUCTION & DEPLOYMENT ===",
    "start:backend:prod": "bun backend/dist/index.js",
    "preview:frontend": "bun run -w frontend preview -- --port 5173 --strictPort",
    "preserve:prod": "bun run build",
    "serve:prod": "concurrently \"bun run start:backend:prod\" \"bun run preview:frontend\"",

    "//6": "=== DATABASE ===",
    "db:push": "DATABASE_URL=\"file:./prisma/dev.db\" bunx prisma db push",
    "db:generate": "bunx prisma generate",
    "postinstall": "bun run db:generate",

    "//7": "=== PERFORMANCE BENCHMARKING ===",
    "perf:benchmark": "node scripts/performance-benchmark.mjs",
    "perf:quick": "node scripts/perf-quick.js",
    "perf:compare": "node scripts/perf-compare.js",
    "perf:install": "node scripts/measure-install.js",
    "perf:dev": "node scripts/measure-dev-startup.js",
    "perf:runtime": "node scripts/runtime-test.js",

    "//8": "=== TESTING & COVERAGE ===",
    "test:backend": "cd backend && npm test",
    "test:frontend": "cd frontend && npx vitest run",
    "test:backend:coverage": "cd backend && bun test --coverage src",
    "test:frontend:coverage": "cd frontend && npx vitest run --coverage",
    "test:coverage": "bun scripts/coverage.mjs",
    "test:watch": "concurrently \"cd backend && bun test --watch src\" \"cd frontend && bunx vitest --watch\"",
    "test:db": "cd backend && DATABASE_URL=\"file:../prisma/dev.db\" bun test-db.ts"
  },
  "devDependencies": {
    "concurrently": "^8.2.2"
  },
  "dependencies": {
    "@prisma/client": "^6.15.0",
    "prisma": "^6.15.0"
  },
  "engines": {
    "node": ">=22.0.0",
    "npm": ">=10.0.0",
    "bun": ">=1.0.0"
  }
}
