{
  "name": "kanban-board",
  "version": "1.0.0",
  "description": "Collaborative Kanban board system",
  "private": true,
  "workspaces": [
    "frontend",
    "backend",
    "shared"
  ],
  "scripts": {
    "dev": "concurrently \"npm run dev:backend\" \"npm run dev:frontend\"",
    "dev:frontend": "npm run -w frontend dev",
    "dev:backend": "npm run -w kanban-backend dev",
    "build": "npm run --workspaces --if-present build",
    "build:frontend": "npm run -w frontend build",
    "build:backend": "npm run -w kanban-backend build",
    "build:shared": "npm run -w @kanban/shared build",
    "postinstall": "npm run db:generate",
    "lint": "npm run lint:frontend && npm run lint:backend",
    "lint:frontend": "cd frontend && npm run lint",
    "lint:backend": "cd backend && npm run lint",
    "typecheck": "npm run typecheck:frontend && npm run typecheck:backend",
    "typecheck:frontend": "cd frontend && npx tsc -b --noEmit",
    "typecheck:backend": "cd backend && npx tsc --noEmit",
    "test": "npm run test:backend && npm run test:frontend",
    "test:backend": "cd backend && npm test",
    "test:frontend": "cd frontend && npm test",
    "test:backend:coverage": "cd backend && npm test -- --coverage",
    "test:frontend:coverage": "cd frontend && npm run test:coverage",
    "test:coverage": "node scripts/coverage.mjs",
    "test:watch": "concurrently \"cd backend && npx jest --watch --passWithNoTests\" \"cd frontend && npx vitest\"",
    "test:db": "cd backend && npx ts-node test-db.ts",
    "db:push": "npx prisma db push",
    "db:generate": "npx prisma generate",
    "start:backend:prod": "node backend/dist/index.js",
    "preview:frontend": "npm run -w frontend preview -- --port 5173 --strictPort",
    "preserve:prod": "npm run build",
    "serve:prod": "concurrently \"npm run start:backend:prod\" \"npm run preview:frontend\""
  },
  "devDependencies": {
    "concurrently": "^8.2.2"
  },
  "dependencies": {
    "@prisma/client": "^6.15.0",
    "prisma": "^6.15.0"
  }
}
