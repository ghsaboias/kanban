{
  "name": "kanban-backend",
  "version": "1.0.0",
  "description": "Kanban board backend API",
  "main": "dist/index.js",
  "scripts": {
    "dev": "bun --watch --clear-screen=false src/index.ts",
    "dev:npm": "npx tsx watch src/index.ts",
    "build": "bun build src/index.ts --outdir dist --target node --minify",
    "build:tsc": "bunx tsc",
    "build:npm": "npx tsc",
    "start": "bun dist/index.js",
    "start:npm": "node dist/index.js",
    "lint": "bunx eslint src --ext .ts",
    "lint:npm": "npx eslint src --ext .ts",
    "test": "bun test src",
    "test:npm": "npx jest",
    "test:watch": "bun test --watch src",
    "test:watch:npm": "npx jest --watch",
    "test:coverage": "bun test --coverage src",
    "test:coverage:npm": "npx jest --coverage"
  },
  "dependencies": {
    "@kanban/shared": "file:../shared",
    "@clerk/backend": "^2.10.1",
    "@clerk/express": "^1.7.26",
    "@types/socket.io": "^3.0.1",
    "cors": "^2.8.5",
    "dotenv": "^16.4.5",
    "express": "^4.18.2",
    "sanitize-html": "^2.17.0",
    "socket.io": "^4.8.1"
  },
  "devDependencies": {
    "@eslint/js": "^9.34.0",
    "@types/cors": "^2.8.17",
    "@types/express": "^4.17.21",
    "@types/jest": "^30.0.0",
    "@types/node": "^24.3.0",
    "@types/sanitize-html": "^2.16.0",
    "@types/supertest": "^6.0.3",
    "eslint": "^9.34.0",
    "globals": "^16.3.0",
    "tsx": "^4.7.0",
    "prisma": "^5.17.0",
    "supertest": "^7.1.4",
    "typescript": "^5.3.0",
    "typescript-eslint": "^8.41.0"
  },
  "prisma": {
    "schema": "../prisma/schema.prisma"
  }
}
