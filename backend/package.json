    "@types/cors": "^2.8.17",
    "@types/express": "^4.17.21",
    "@types/jest": "^30.0.0",
    "@types/node": "^20.10.0",
    "@types/sanitize-html": "^2.16.0",
    "@types/supertest": "^6.0.3",
    "eslint": "^9.34.0",
    "globals": "^16.3.0",
    "jest": "^29.7.0",
    "prisma": "^5.17.0",
